# backend/.env
# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=expense_management
DB_USER=postgres
DB_PASSWORD=password

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC

